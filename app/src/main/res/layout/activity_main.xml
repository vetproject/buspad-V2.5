<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <View
        android:id="@+id/home_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_image"
        />

    <GridLayout
        android:id="@+id/first_item_view"
        android:layout_width="520dp"
        android:layout_height="130dp"
        android:layout_marginLeft="650dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp"
        android:columnCount="2"
        android:rowCount="1"
        tools:ignore="RtlHardcoded,VisualLintBounds">

        <androidx.cardview.widget.CardView
            android:id="@+id/ticket_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:layout_rowWeight="0"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            tools:ignore="VisualLintBounds">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
            android:background="@color/yellow">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ticket"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/booking_ticket"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:layout_marginTop="10dp" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/youtube_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:layout_rowWeight="0"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            tools:ignore="VisualLintBounds">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/yellow">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/youtube"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/youtube"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
    <GridLayout
        android:id="@+id/second_item_view"
        android:layout_width="520dp"
        android:layout_height="130dp"
        android:layout_marginStart="650dp"
        android:layout_below="@id/first_item_view"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="70dp"
        android:columnCount="2"
        android:rowCount="1"
        tools:ignore="VisualLintBounds">
        <androidx.cardview.widget.CardView
            android:id="@+id/music_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:layout_rowWeight="0"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            tools:ignore="VisualLintBounds">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/yellow">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/music"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/music"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/video_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:layout_rowWeight="0"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            tools:ignore="VisualLintBounds">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/yellow">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/video"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/movie"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
    <GridLayout
        android:id="@+id/third_item_view"
        android:layout_width="520dp"
        android:layout_height="130dp"
        android:layout_marginLeft="650dp"
        android:layout_below="@id/second_item_view"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="70dp"
        android:columnCount="2"
        android:rowCount="1"
        tools:ignore="RtlHardcoded,VisualLintBounds">
        <androidx.cardview.widget.CardView
            android:id="@+id/internet_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:layout_rowWeight="0"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            tools:ignore="VisualLintBounds">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/yellow">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/internet"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/internet"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/game_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:layout_rowWeight="0"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            tools:ignore="VisualLintBounds">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/yellow">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/game"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/game"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
    <GridLayout
        android:id="@+id/languages_view"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_marginLeft="665dp"
        android:layout_below="@+id/third_item_view"
        android:layout_marginTop="-20dp"
        android:columnCount="3"
        android:rowCount="1"

        tools:ignore="RtlHardcoded,VisualLintBounds">

        <androidx.cardview.widget.CardView
            android:id="@+id/khmer_view"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:layout_rowWeight="0"
            android:layout_marginEnd="20dp"
            tools:ignore="VisualLintBounds">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/kh"

                tools:ignore="UselessLeaf" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/english_view"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:layout_rowWeight="0"
            android:layout_marginEnd="20dp"
            tools:ignore="VisualLintBounds">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/en"
                tools:ignore="ExtraText,UselessLeaf">
                >
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/chines_view"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_columnWeight="0"
            android:layout_row="0"
            android:layout_rowWeight="0"
            android:layout_marginEnd="20dp"
            tools:ignore="VisualLintBounds">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/ch"
                tools:ignore="ExtraText,UselessLeaf">
                >
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</RelativeLayout>